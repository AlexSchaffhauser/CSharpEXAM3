<Window x:Class="EXAM3.StudentGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EXAM3"
        mc:Ignorable="d"
        Title="StudentGrid" Height="450" Width="800">
    <Grid>
        <ListView Margin="5" Name="stdGrid">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="First Name" Width="100" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Last Name" Width="100" DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Header="Is Registered?" Width="100" DisplayMemberBinding="{Binding IsRegistered}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
